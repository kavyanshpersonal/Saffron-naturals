                    price: 1200,
                    description: "Premium quality Kashmiri almonds. Large size, sweet taste, and rich in nutrients. Perfect for export markets."
                },
                pomegranates: {
                    name: "Bhagwa Pomegranates",
                    price: 180,
                    description: "Premium Bhagwa variety pomegranates. Large size, deep red color, sweet taste. Export quality with excellent shelf life."
                }
            },
            about: {
                companyName: "Saffron Naturals",
                description: "We are a premium exporter of Kashmir's finest saffron, dry fruits, and fresh produce. With over 15 years of experience, we serve global markets with authentic, high-quality products directly from Kashmir farms. Our commitment to quality and customer satisfaction has made us a trusted partner for businesses worldwide.",
                email: "info@saffronnaturals.com",
                phone: "+91-XXX-XXX-XXXX",
                whatsapp: "+91-XXX-XXX-XXXX",
                address: "Kashmir, India\nExport Hub: Mumbai, Maharashtra\nInternational Office: Dubai, UAE"
            }
        };

        // Navigation Functions
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('-translate-x-full');
        }

        function showDashboardSection(sectionName) {
            // Hide all sections
            const sections = document.querySelectorAll('.dashboard-section');
            sections.forEach(section => {
                section.classList.remove('active');
            });

            // Remove active class from all nav items
            const navItems = document.querySelectorAll('.nav-item');
            navItems.forEach(item => {
                item.classList.remove('active');
            });

            // Show selected section
            const targetSection = document.getElementById(sectionName + 'Section');
            if (targetSection) {
                targetSection.classList.add('active');
            }

            // Add active class to current nav item
            const navButtons = document.querySelectorAll('.nav-item');
            navButtons.forEach(button => {
                if (button.textContent.toLowerCase().includes(sectionName) || 
                    (sectionName === 'overview' && button.textContent.includes('Dashboard Overview')) ||
                    (sectionName === 'content' && button.textContent.includes('Website Content'))) {
                    button.classList.add('active');
                }
            });

            // Close sidebar on mobile after navigation
            if (window.innerWidth < 1024) {
                document.getElementById('sidebar').classList.add('-translate-x-full');
            }
        }

        // Content Management Functions
        function showContentTab(tabName) {
            // Hide all tab panels
            const panels = document.querySelectorAll('.content-tab-panel');
            panels.forEach(panel => {
                panel.classList.add('hidden');
            });

            // Remove active class from all tabs
            const tabs = document.querySelectorAll('.content-tab');
            tabs.forEach(tab => {
                tab.classList.remove('border-blue-500', 'text-blue-600');
                tab.classList.add('border-transparent', 'text-gray-500');
            });

            // Show selected tab panel
            const targetPanel = document.getElementById(tabName + 'Tab');
            if (targetPanel) {
                targetPanel.classList.remove('hidden');
            }

            // Add active class to current tab
            const tabButtons = document.querySelectorAll('.content-tab');
            tabButtons.forEach(button => {
                if (button.textContent.toLowerCase().includes(tabName) || 
                    (tabName === 'hero' && button.textContent.includes('Hero Section')) ||
                    (tabName === 'products' && button.textContent.includes('Products & Pricing')) ||
                    (tabName === 'gallery' && button.textContent.includes('Photo Gallery')) ||
                    (tabName === 'about' && button.textContent.includes('About & Contact'))) {
                    button.classList.remove('border-transparent', 'text-gray-500');
                    button.classList.add('border-blue-500', 'text-blue-600');
                }
            });
        }

        // Content Saving Functions
        function saveContent(section, field) {
            const indicator = document.getElementById('saveIndicator');
            
            // Update content data based on section and field
            if (section === 'hero') {
                if (field === 'headline') {
                    contentData.hero.headline = document.getElementById('heroHeadline').value;
                    document.getElementById('heroPreviewHeadline').textContent = contentData.hero.headline;
                } else if (field === 'subtitle') {
                    contentData.hero.subtitle = document.getElementById('heroSubtitle').value;
                    document.getElementById('heroPreviewSubtitle').textContent = contentData.hero.subtitle;
                } else if (field === 'cta') {
                    contentData.hero.cta = document.getElementById('heroCTA').value;
                    document.getElementById('heroPreviewCTA').textContent = contentData.hero.cta;
                }
            } else if (section === 'product') {
                if (field.includes('saffron')) {
                    const subField = field.split('-')[1];
                    if (subField === 'name') {
                        contentData.products.saffron.name = document.getElementById('saffronName').value;
                        document.getElementById('saffronPreviewName').textContent = contentData.products.saffron.name;
                    } else if (subField === 'price') {
                        contentData.products.saffron.price = parseInt(document.getElementById('saffronPrice').value);
                        document.getElementById('saffronPreviewPrice').textContent = `‚Çπ${contentData.products.saffron.price.toLocaleString()}/kg`;
                    } else if (subField === 'desc') {
                        contentData.products.saffron.description = document.getElementById('saffronDesc').value;
                        document.getElementById('saffronPreviewDesc').textContent = contentData.products.saffron.description.substring(0, 50) + '...';
                    }
                } else if (field.includes('almonds')) {
                    const subField = field.split('-')[1];
                    if (subField === 'name') {
                        contentData.products.almonds.name = document.getElementById('almondsName').value;
                        document.getElementById('almondsPreviewName').textContent = contentData.products.almonds.name;
                    } else if (subField === 'price') {
                        contentData.products.almonds.price = parseInt(document.getElementById('almondsPrice').value);
                        document.getElementById('almondsPreviewPrice').textContent = `‚Çπ${contentData.products.almonds.price.toLocaleString()}/kg`;
                    } else if (subField === 'desc') {
                        contentData.products.almonds.description = document.getElementById('almondsDesc').value;
                        document.getElementById('almondsPreviewDesc').textContent = contentData.products.almonds.description.substring(0, 50) + '...';
                    }
                } else if (field.includes('pomegranates')) {
                    const subField = field.split('-')[1];
                    if (subField === 'name') {
                        contentData.products.pomegranates.name = document.getElementById('pomegranatesName').value;
                        document.getElementById('pomegranatesPreviewName').textContent = contentData.products.pomegranates.name;
                    } else if (subField === 'price') {
                        contentData.products.pomegranates.price = parseInt(document.getElementById('pomegranatesPrice').value);
                        document.getElementById('pomegranatesPreviewPrice').textContent = `‚Çπ${contentData.products.pomegranates.price.toLocaleString()}/kg`;
                    } else if (subField === 'desc') {
                        contentData.products.pomegranates.description = document.getElementById('pomegranatesDesc').value;
                        document.getElementById('pomegranatesPreviewDesc').textContent = contentData.products.pomegranates.description.substring(0, 50) + '...';
                    }
                }
            } else if (section === 'about') {
                if (field === 'company-name') {
                    contentData.about.companyName = document.getElementById('companyName').value;
                    document.getElementById('aboutPreviewCompany').textContent = contentData.about.companyName;
                } else if (field === 'description') {
                    contentData.about.description = document.getElementById('aboutDescription').value;
                    document.getElementById('aboutPreviewDescription').textContent = contentData.about.description.substring(0, 100) + '...';
                } else if (field === 'email') {
                    contentData.about.email = document.getElementById('contactEmail').value;
                    document.getElementById('aboutPreviewEmail').textContent = contentData.about.email;
                } else if (field === 'phone') {
                    contentData.about.phone = document.getElementById('contactPhone').value;
                    document.getElementById('aboutPreviewPhone').textContent = contentData.about.phone;
                } else if (field === 'whatsapp') {
                    contentData.about.whatsapp = document.getElementById('whatsappNumber').value;
                    document.getElementById('aboutPreviewWhatsapp').textContent = contentData.about.whatsapp;
                } else if (field === 'address') {
                    contentData.about.address = document.getElementById('businessAddress').value;
                    document.getElementById('aboutPreviewAddress').innerHTML = contentData.about.address.replace(/\n/g, '<br>');
                }
            }

            // Show save indicator
            indicator.classList.add('show');
            setTimeout(() => {
                indicator.classList.remove('show');
            }, 2000);

            console.log('Content saved:', section, field, contentData);
        }

        // Image Upload Functions
        function uploadImage(section, type) {
            alert(`üìÅ IMAGE UPLOAD\n\nUploading ${type} image for ${section} section...\n\nIn a real system, this would:\n‚Ä¢ Upload the image to server\n‚Ä¢ Optimize for web display\n‚Ä¢ Update the preview\n‚Ä¢ Save the new image path\n\nImage upload system ready!`);
        }

        function uploadGalleryImages() {
            const fileInput = document.getElementById('galleryImages');
            const category = document.getElementById('imageCategory').value;
            
            if (fileInput.files.length > 0) {
                alert(`üìÅ GALLERY UPLOAD\n\nUploading ${fileInput.files.length} images to "${category}" category...\n\nIn a real system, this would:\n‚Ä¢ Process multiple images\n‚Ä¢ Create thumbnails\n‚Ä¢ Organize by category\n‚Ä¢ Update gallery display\n\nGallery upload system ready!`);
            } else {
                alert('Please select images to upload first!');
            }
        }

        function deleteGalleryImage(imageId) {
            if (confirm(`Are you sure you want to delete this image?\n\nThis action cannot be undone.`)) {
                alert(`üóëÔ∏è IMAGE DELETED\n\nImage "${imageId}" has been removed from the gallery.\n\nIn a real system, this would:\n‚Ä¢ Remove from server storage\n‚Ä¢ Update gallery display\n‚Ä¢ Clean up references\n\nImage deletion system ready!`);
            }
        }

        // Content Management Actions
        function previewChanges() {
