        // Content Management System Variables
        let contentData = {
            hero: {
                headline: "Premium Kashmir Saffron & Dry Fruits",
                subtitle: "Direct from Kashmir farms to global markets. Premium quality saffron, almonds, walnuts, and dry fruits for wholesale and export.",
                cta: "Get Quote Now"
            },
            products: {
